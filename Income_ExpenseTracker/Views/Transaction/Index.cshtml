@{
}

@model List<PersonalExpenseTracker.Models.Transaction>

@{
    ViewBag.Title = "Transactions";
}

<h2>Transactions</h2>

<p>
    <a href="@Url.Action("Create", "Transaction")" class="btn btn-primary">Add New Transaction</a>
   @*  <a href="@Url.Action("Summary", "Transaction")" class="btn btn-secondary">View Summary</a> *@
</p>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Amount</th>
            <th>Type</th>
            <th>Category</th>
            <th>Description</th>
            <th>Date</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var txn in Model)
        {
            <tr>
                <td>@txn.Amount.ToString("C")</td>
                <td>@txn.Type</td>
                <td>@txn.CategoryName</td>
                <td>@txn.Description</td>
                <td>@txn.TransactionDate.ToString("dd MMM yyyy")</td>
            </tr>
        }
    </tbody>
</table>
